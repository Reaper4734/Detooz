# Detooz Backend Environment Variables
# Copy this file to .env and fill in your values

# Database (auto-configured in Docker, only needed for local dev)
DATABASE_URL=sqlite:///./detooz.db

# Security
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# AI APIs (Required for scam detection)
GROQ_API_KEY=your-groq-api-key
GEMINI_API_KEY=your-gemini-api-key

# OpenRouter (Optional, for fallback)
OPENROUTER_API_KEY=your-openrouter-api-key

# Redis (auto-configured in Docker)
REDIS_URL=redis://localhost:6379
